<databaseChangeLog xmlns="http://www.liquibase.org/xml/ns/dbchangelog"
                   xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
                   xsi:schemaLocation="http://www.liquibase.org/xml/ns/dbchangelog
                        http://www.liquibase.org/xml/ns/dbchangelog/dbchangelog-3.4.xsd">

    <changeSet id="create_client" author="Oleksiy">
        <createTable tableName="client">
            <column name="id" type="bigint(20)">
                <constraints primaryKey="true" nullable="false" />
            </column>
            <column name="email" type="varchar(255)">
                <constraints nullable="false" />
            </column>
            <column name="first_name" type="varchar(255)">
                <constraints nullable="false" />
            </column>
            <column name="last_name" type="varchar(255)">
                <constraints nullable="false" />
            </column>

            <column name="password" type="varchar(255)">
                <constraints nullable="false" />
            </column>

            <column name="role" type="int(11)">
                <constraints nullable="false" />
            </column>

            <column name="provider_id" type="bigint(20)">
                <constraints nullable="false" />
            </column>

        </createTable>
    </changeSet>


    <changeSet id="add-fk-between-client_and_provider" author="Oleksiy">
        <addForeignKeyConstraint constraintName="fk_cl_pr"
                                 baseTableName="client" baseColumnNames="provider_id" referencedTableName="provider"
                                 referencedColumnNames="id" onDelete="CASCADE" onUpdate="CASCADE" />
    </changeSet>


    <changeSet id="update_client" author="Oleksiy">
        <insert tableName="client">
            <column name="id"  value="1" />
            <column name="email" value="fox@gmail.com" />
            <column name="first_name" value="Kook" />
            <column name="last_name" value="Petro" />
            <column name="password" value="kout" />
            <column name="role" value="1" />
            <column name="provider_id" value="1"/>
        </insert>
    </changeSet>





</databaseChangeLog>