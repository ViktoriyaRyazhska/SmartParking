<databaseChangeLog xmlns="http://www.liquibase.org/xml/ns/dbchangelog"
                   xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
                   xsi:schemaLocation="http://www.liquibase.org/xml/ns/dbchangelog
                        http://www.liquibase.org/xml/ns/dbchangelog/dbchangelog-3.4.xsd">


    <changeSet id="create_spot" author="Oleksiy">
        <createTable tableName="spot">
            <column name="id" type="bigint(20)">
                <constraints primaryKey="true" nullable="false"/>
            </column>
            <column name="name" type="varchar(255)">
                <constraints nullable="false"/>
            </column>

            <column name="parking_id" type="bigint(20)">
                <constraints nullable="false"/>
            </column>

        </createTable>
    </changeSet>

    <changeSet id="add-fk-between-spot_and_parking" author="Oleksiy">
        <addForeignKeyConstraint constraintName="fk_sp_park"
                                 baseTableName="spot" baseColumnNames="parking_id" referencedTableName="parking"
                                 referencedColumnNames="id" onDelete="CASCADE" onUpdate="CASCADE" />
    </changeSet>

</databaseChangeLog>